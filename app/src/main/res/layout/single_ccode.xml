<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_2sdp"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_3sdp"
        android:elevation="@dimen/_15sdp"
        android:layout_margin="@dimen/_5sdp"
        android:layout_width="@dimen/_120sdp">

        <LinearLayout
            android:background="#EDEFEF"
            android:padding="@dimen/_4sdp"
            android:foreground="?selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_code_serial"
                android:text="কোড ১ :"
                android:textColor="#FC19053C"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_code_snippet"
                android:text="অধ্যায় ১, অধ্যায় ২, অধ্যায় ৩,অধ্যায় ১, অধ্যায় ২, অধ্যায় ৩ ,অধ্যায় ১, অধ্যায় ২, অধ্যায় ৩"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/firacode"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold|italic"
                android:background="@color/colorCodeEditor"
                android:padding="@dimen/_2sdp"

                />


            <Button android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_28sdp"
                android:text="দেখুন"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold"
                android:fontFamily="@font/kalpurush"
                android:layout_gravity="center"
                android:id="@+id/btn_code_see"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>