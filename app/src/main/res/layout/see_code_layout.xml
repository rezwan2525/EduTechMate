<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <androidx.cardview.widget.CardView
                android:layout_height="match_parent"
                app:cardCornerRadius="@dimen/_3sdp"
                android:elevation="@dimen/_15sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="match_parent">

                <LinearLayout
                    android:background="#EDEFEF"
                    android:padding="@dimen/_4sdp"
                    android:foreground="?selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_code_serial"
                        android:text="কোড ১ :"
                        android:textColor="#FC19053C"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_code_snippet"
                        android:text="অধ্যায় ১, অধ্যায় ২, অধ্যায় ৩,অধ্যায় ১, অধ্যায় ২, অধ্যায় ৩ ,অধ্যায় ১, অধ্যায় ২, অধ্যায় ৩"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/firacode"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold|italic"
                        android:background="@color/colorCodeEditor"
                        android:padding="@dimen/_2sdp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ইনপুট :"
                        android:textColor="#FC19053C"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_code_input"
                        android:text="অধ্যায় ১, অধ্যায় ২, অধ্যায় ৩,অধ্যায় ১, অধ্যায় ২, অধ্যায় ৩ ,অধ্যায় ১, অধ্যায় ২, অধ্যায় ৩"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/firacode"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold|italic"
                        android:background="@color/colorCodeEditor"
                        android:padding="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="আউটপুট :"
                        android:textColor="#FC19053C"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_code_output"
                        android:text="অধ্যায় ১, অধ্যায় ২, অধ্যায় ৩,অধ্যায় ১, অধ্যায় ২, অধ্যায় ৩ ,অধ্যায় ১, অধ্যায় ২, অধ্যায় ৩"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/firacode"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold|italic"
                        android:background="@color/colorCodeEditor"
                        android:padding="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        />

                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>



    </ScrollView>

</RelativeLayout>